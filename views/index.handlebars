<div class="container">
    <img class="mx-auto d-block" src="\assets\img\burger.png" style="height:150px; width:150px;">
    
    <h2 class="text-center">Eat-Da-Burger!</h2>
    
    <div class="row">
        <div class="col-6 not_devoured">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=false }}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-6 devoured">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=true }}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col"></div>
        
        <div class="col-6">
            <form action="/burgers/new" method="POST" class="createBurger">
                <div class="form-group">
                    <label for="createdName">Enter a name for your burger!</label>
                    <input type="text" class="form-control" id="createdName" placeholder="Da-Whoppa">
                    <br>
                    <button type="submit" class="btn btn-default" id="createButton">Add It To The Menu</button>
                </div>
            </form>
        </div>

        <div class="col"></div>
    </div>
</div>